{
  "name": "tmp-wordpress",
  "version": "2.0.2",
  "description": "Template for WordPress theme using Vite, TailwindCSS, etc.",
  "author": "@yogarasu",
  "license": "MIT",
  "scripts": {
    "build": "concurrently \"npm:build:*\"",
    "build:tw": "tailwindcss -i ./assets/src/css/lib/tailwind.css -o ./assets/dist/css/lib/tailwind.css --postcss --minify",
    "build:css": "npm run lint && postcss assets/src/css/*.css -d assets/dist/css/ --config postcss.config.js && postcss assets/src/css/lib/*.css -d assets/dist/css/lib/ --config postcss.config.js && postcss assets/src/css/admin/*.css -d assets/dist/css/admin/ --config postcss.config.js && postcss assets/src/css/pages/*.css -d assets/dist/css/pages/ --config postcss.config.js && npm run build:tw",
    "build:font": "node --no-warnings --loader ts-node/esm scripts/font.mts --src assets/src/font --dist assets/dist/font",
    "build:svg": "node --no-warnings --loader ts-node/esm scripts/copy.mts --src assets/src/svg --dist assets/dist/svg",
    "build:img": "node --no-warnings --loader ts-node/esm scripts/sharp.mts --src assets/src/img --dist assets/dist/img",
    "build:js": "vite build --config vite.config.ts --minify",
    "build:modernizr": "node --no-warnings --loader ts-node/esm scripts/modernizr.mts --dist assets/src/js/lib",
    "watch": "concurrently \"npm:watch:*\"",
    "watch:tw": "chokidar \"{index,header,footer,404}.php\" \"{pages,components,singles,archives}/**/*.php\" --command \"npm run build:tw\" --initial",
    "watch:css": "chokidar \"assets/src/css/**/*.css\" --command \"npm run build:css\" --initial",
    "watch:font": "chokidar \"assets/src/font/**/*.{woff,woff2,ttf,otf}\" --command \"npm run build:font\" --initial",
    "watch:svg": "chokidar \"assets/src/svg/**/*.svg\" --command \"npm run build:svg\" --initial",
    "watch:img": "chokidar \"assets/src/img/**/*.{jpg,jpeg,png,avif}\" --command \"npm run build:img\" --initial",
    "watch:js": "chokidar \"assets/src/js/**/*.js\" --command \"npm run build:js\" --initial",
    "lint": "stylelint assets/src/css/**/*.css --fix --config stylelint.config.js",
    "update": "pnpm -r update --latest --depth 100 && pnpm install --lockfile-only && npm install --package-lock-only"
  },
  "dependencies": {
    "swiper": "^9.2.4",
    "vanilla-autokana": "^1.3.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@types/commander": "^2.12.2",
    "@types/modernizr": "^3.5.3",
    "@types/node": "^18.16.0",
    "@types/subset-font": "^1.4.0",
    "@typescript-eslint/parser": "^5.59.5",
    "autoprefixer": "^10.4.14",
    "chokidar-cli": "^3.0.0",
    "commander": "^10.0.1",
    "concurrently": "^8.0.1",
    "cssnano": "^6.0.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-tailwindcss": "^3.11.0",
    "modernizr": "^3.12.0",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-preset-env": "^8.3.2",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "rollup-plugin-multi-input": "^1.4.1",
    "sharp": "^0.32.1",
    "stylelint": "^15.6.2",
    "stylelint-config-recommended": "^12.0.0",
    "stylelint-order": "^6.0.3",
    "subset-font": "^2.1.0",
    "tailwindcss": "^3.3.2",
    "tiny-glob": "^0.2.9",
    "ts-node": "^10.9.1",
    "typed-query-selector": "^2.10.1",
    "typescript": "^5.0.4",
    "vite": "^4.3.5"
  },
  "overrides": {
    "css-what": "^5.0.1",
    "json5": "^2.2.2",
    "got": "^11.8.5",
    "glob-parent": "^6.0.1"
  },
  "browserslist": [
    "> 1% in JP",
    "last 2 versions"
  ],
  "volta": {
    "node": "18.16.0",
    "npm": "9.5.1",
    "pnpm": "8.2.0"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8"
  },
  "keywords": [
    "tmp-wordpress",
    "wp",
    "wordpress",
    "tailwindcss"
  ]
}
